<%= form_for(page) do |f| %>
  <% if page.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(page.errors.count, "error") %> prohibited this page from being saved:</h2>

      <ul>
      <% page.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
 <article class="content item-editor-page">
    
        <div class="title-block">
        
            <h3 class="title"> Add new  <span class="sparkline bar" data-type="bar"></span> </h3>
    
        </div>
    
        <form name="item">
        
            <div class="card card-block">
            
                <div class="row">
                
                    <div class="form-group">

                      <div class="col-xs-4">
                
                        <label class="control-label"><%= f.label :page_name %></label>

                        <div class="form-group"><%= f.text_field :page_name %></div>

                      </div>

                      <div class="col-xs-4">
                
                        <label class="control-label"> <%= f.label :icon %></label>
   
                        <div class="form-group"> <%= f.text_field :icon %></div>
                  
                      </div>

                      <div class="col-xs-4">
                
                        <label class="control-label"> <%= f.label :url %></label>
      
                        <div class="form-group"><%= f.text_field :url %></div>

                      </div>
                   
                    </div>
            
                </div>
            
            </div>

        </form>    

        <div class="form-group row mrgn-top">
            
            <div class="col-sm-10 col-sm-offset-2"> <%= f.submit :class=>"btn btn-primary"%></div>
       
       </div>
  
    </article>

<% end %>
