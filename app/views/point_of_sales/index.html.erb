<section class="page-content">
  <div class="container-fluid">
    <p class="page_path">Meal Order</p>
    <h2 class="header_title">Meal Order <%= link_to '<i class="fa fa-plus"></i>'.html_safe,new_point_of_sale_path,:class=>"btn"%></h2>
    <div id="dashboard-container">
      <div class="card table-container mb-2">
        <div class="card-body">
          <table class="table table-striped table-datatable table-hover display" cellspacing="0" width="100%"  id="point_of_sale">
            <thead>
              <tr>
                <th>Customer</th>
                <th>Date</th>
                <th>Meal Time</th>
                <th>Restriction</th>
                <th>Quantity</th>
                <!-- <th>Meal Type</th> -->
                <th>Comment</th>  
              </tr>
            </thead>
            <tbody>
              <% @point_of_sales.each do |point_of_sale| %>
                <tr id="<%=point_of_sale.id%>">
                  <td><%=point_of_sale.tenant.name%></td>
                  <td><%= format_date(point_of_sale.date) %></td>      
                  <td><%= point_of_sale.meal_time %></td>
                  <td><%= point_of_sale.meal_restriction.present? ? point_of_sale.meal_restriction.meal_restriction_name : nil %></td>
                  <td><%= point_of_sale.quantity%></td>
                  <!-- <td><%#= point_of_sale.food_category.name%></td> -->
                  <td><%= point_of_sale.comment%>
                    <div class="side-pop position-absolute">
                      <ul class="list-unstyled mb-0">
                        <li><a href="/point_of_sales/<%=point_of_sale.id%>" title="Show" id="show" > <i class="fas fa-eye"></i></a></li>
                        <li><a href="/point_of_sales/<%=point_of_sale.id%>/edit" title="Edit" id="edit" > <i class="fas fa-edit" ></i></a></li>
                        <%if CEO? %>
                          <li><a href="/point_of_sales/<%=point_of_sale.id%>" title="Delete" id="destroy" data-method="delete" class="confirmation"> <i class="far fa-trash-alt"></i></a></li>
                        <%end%> 
                      </ul>
                    </div>
                  </td>
                  
                 <!--  <td><!%=link_to "",production_item, method: :delete, data: { confirm: 'Are you sure?' } ,class: "btn btn-sm btn-default fa fa-sm fa-trash-o" ,:style=>"color:red"%></td> -->
                </tr>
              <%end%>
            </tbody>            
          </table>
        </div>  
      </div>
      <div class="clearfix"></div>
    </div>
  </div>
</section>
  <script>
  $('.confirmation').on('click', function () {
        return confirm('Are you sure?');
    });
</script>













































