<style type="text/css">
  img.company_logo {
    width: 120px;
    display: block;
}
</style>

<section class="page-content">
  <div class="container-fluid">
    <p class="page_path">SCM / Driver Management / Show Driver Management</p>
    <h2 class="header_title">Show Driver Management <%= link_to '<i class="fas fa-arrow-left"></i>Back'.html_safe, drivers_path, title:"Back", :class=>"btn btn_back"%></h2>
    <div class="card show_form mb-5">
      <div class="card-body">
        <div class="row">

          <div class="col-md-3">
            <label class="control-label">Driver Name</label>
            <h3><%= @driver.driver_name %></h3>
          </div>

          <div class="col-md-3">
            <label class="control-label">Contact No</label>
            <h3><%= @driver.contact_no  %></h3>
          </div>

          <div class="col-md-3">
            <label class="control-label">UserName</label>
            <h3><%= @driver.username  %></h3>
          </div>

          <div class="col-md-3">
            <label class="control-label">Password</label>
            <h3><%= @driver.password  %></h3>
          </div>

        </div>

        <div class="row">
          
          <div class="col-md-3">
            <label class="control-label">Email</label>
            <h3><%= @driver.email  %></h3>
          </div>

          <div class="col-md-3">
            <label class="control-label">License Number</label>
            <h3><%= @driver.licence_no  %></h3>
          </div>

          <div class="col-md-3">
            <label class="control-label">License Expiry Date</label>
            <h3><%= @driver.license_exp.strftime("%d-%m-%Y")  %></h3>
          </div>

          <div class="col-md-3">
            <label class="control-label">Proof</label>
            <%=image_tag @driver.proof,:class=>"company_logo", :alt=>"" if @driver.proof.present? %>
          </div>


        </div>
    </div>
</div>
</div>
</section>













