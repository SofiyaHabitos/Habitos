<section class="page-content">
  <div class="container-fluid">
    <p class="page_path">SCM / Driver Management</p>
    <h2 class="header_title">Driver Management <%= link_to '<i class="fa fa-plus"></i>'.html_safe,new_driver_path,:class=>"btn"%></h2>
    <!-- <p id="notice"><%#= notice %></p> -->
<!-- <h1>Drivers</h1> -->
   <!-- <h2 class="header_title">Driver Management<%#= link_to '<i class="fa fa-plus"></i>'.html_safe,new_driver_path,:class=>"btn"%></h2> -->
    <% flash.each do |key, value| %>
      <div class="alert alert-<%= key %>" style="color: coral;">
        <%= value %>
        <button type="button" class="close" data-dismiss="alert"> &times; </button>
      </div>
    <% end %>
    <div id="dashboard-container">
      <div class="card table-container mb-2">
        <div class="card-body">
          <table class="table table-striped table-datatable table-hover display" cellspacing="0" width="100%" id="driver">
            <thead>
             <tr>
               <th>Driver name</th>
               <th>Vehicle Name</th>
               <th>Vehicle type</th> 
               <th>Contact no</th>
               <!-- <th>Proof</th> -->
               <th></th>
              <!--  <th colspan="3"></th> -->
             </tr>
            </thead>

            <tbody>
               <% @drivers.each do |driver| %>
               <tr>
               
                 <td><%= driver.driver_name %></td>
                 <td><%= driver.vehicle_no %></td>
                 <%#= driver.vehicle_type %>
                 <td><%= VehicleType.find(driver.vehicle_type).vehicle_type_name %></td>
                 <td><%= driver.contact_no %></td>
                 <!-- <td><%#= driver.contact_no %></td> -->
                <!--  <td><%#= driver.proof %></td> -->
                 <!-- <td><%#= link_to 'Show', driver %></td>
                 <td><%#= link_to 'Edit', edit_driver_path(driver) %></td>
                 <td><%#= link_to 'Destroy', driver, method: :delete, data: { confirm: 'Are you sure?' } %></td> -->
                 <td>
                  <div class="side-pop position-absolute">
                      <ul class="list-unstyled mb-0">
                        <li><a href="/drivers/<%=driver.id%>" title="Show" id="show" > <i class="fas fa-eye"></i></a></li>
                        <li><a href="/drivers/<%=driver.id%>/edit" title="Edit" id="edit"> <i class="fas fa-edit" ></i></a></li>
                      </ul>
                    </div>
                 </td>
               </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</section>


