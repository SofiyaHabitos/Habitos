<section class="page-content">
  <div class="container-fluid">
    <p class="page_path">Master / Vehicle Management</p>
    <h2 class="header_title">Vehicle Management
    <%= link_to '<i class="fa fa-plus"></i>'.html_safe,new_vehicle_path,:class=>"btn"%></h2>
    <p id="notice"><%= notice %></p>

    <div id="dashboard-container">
      <div class="card table-container mb-2">
        <div class="card-body">

          <table class="table table-striped table-datatable display  table-hover display" cellspacing="0" width="100%" id="vehicles">

            <thead>
              <tr>
                <th>Vehicle Type</th>
                <th>Vehicle Name</th>
                <th>Registration Number</th>
                <th>Contact Number</th>
              </tr>
            </thead>

            <tbody>

              <% @vehicles.each do |vehicle| %>
              <tr>
                <td><%= vehicle.vehicle_type.vehicle_type_name %></td>
                <td><%= vehicle.vehicle_name %></td>
                <td><%= vehicle.reg_no %></td>
                <td><%= vehicle.vehicle_contact_no %></td>
                  <td>
                    <div class="side-pop position-absolute">
                      <ul class="list-unstyled mb-0">
                        <li><a href="/vehicles/<%=vehicle.id%>" title="Show" id="show" > <i class="fas fa-eye"></i></a></li>
                        <li><a href="/vehicles/<%=vehicle.id%>/edit" title="Edit" id="edit"> <i class="fas fa-edit" ></i></a></li>
                      </ul>
                    </div>
                  </td> 
              </tr>
              <% end %>

            </tbody>


          </table>

        </div>
      </div>
    </div>

  </div>
</section>































