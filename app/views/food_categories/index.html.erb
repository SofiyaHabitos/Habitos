<section class="page-content">
  <div class="container-fluid">
    <p class="page_path">Master / Meal Type</p>
    <h2 class="header_title">Meal Type <%= link_to '<i class="fa fa-plus"></i>'.html_safe,new_food_category_path,:class=>"btn"%></h2>
    <div id="dashboard-container">
      <div class="card table-container mb-2">
        <div class="card-body">
          <table class="table table-striped table-datatable table-hover display" id="category">
            <thead>
              <tr>
                <th>Name</th>
                <th>Description</th>
                <th>Created_by</th>
                <th>Updated_by</th>
                <th>Action</th>
                <!-- <th>Delete</th> -->
              </tr>
            </thead>
            <tbody>
              <% @food_categories.each do |food_category| %>
                <tr>
                  <td><%= food_category.name %></td>
                  <td><%= food_category.description %></td>
                  <td><%= create(food_category) %></td>
                  <td><%= update(food_category) %></td>
                  <!--td><!%= food_category.created_by %></td>
                  <td><!%= food_category.updated_by %></td-->
                  <!-- <td><!%= link_to 'Show', food_category %></td> -->
                  <td><%= link_to 'Edit', edit_food_category_path(food_category),:class=>"" %></td>
                  <!-- <td><%#= link_to '', food_category, method: :delete, data: { confirm: 'Are you sure?' } ,:class=>"fa fa-trash-o"%></td> -->
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
      <div class="clearfix"></div>
    </div>
  </div>
</section>  
