<section class="page-content">
  <div class="container-fluid">
    <p class="page_path">Master / Standard</p>
    <h2 class="header_title">Standard <%= link_to '<i class="fa fa-plus"></i>'.html_safe,new_standard_path,:class=>"btn"%></h2>
    <div id="dashboard-container">
      <div class="card table-container mb-2">
        <div class="card-body">
          <table class="table table-striped table-datatable table-hover display" cellspacing="0" width="100%" id="standard">
            <thead>
              <tr>
                <th>Tenant Name</th>
                <th>Standard</th>
                <th>Edit</th>
                <!-- <th>Delete</th> -->
              </tr>
            </thead>
            <tbody>
              <% @standards.each do |standard| %>
                <tr>
                  <td><%= standard.tenant.name if standard.tenant.present?%></td>
                  <td><%= standard.standard %></td>
                  <td><%= link_to 'Edit', edit_standard_path(standard),:class=>"" %></td>
                  <!-- <td><%#= link_to '', standard, method: :delete, data: { confirm: 'Are you sure?' },:class=>"fa fa-trash-o" %></td> -->
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
      <div class="clearfix"></div>
    </div>
  </div>
</section>