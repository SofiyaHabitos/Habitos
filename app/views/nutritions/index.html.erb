<section class="page-content">
  <div class="container-fluid">
    <p class="page_path">Master / Item Nutrition</p>
    <h2 class="header_title">Item Nutrition <%= link_to '<i class="fa fa-plus"></i>'.html_safe,new_nutrition_path,:class=>"btn"%></h2>
    <% flash.each do |key, value| %>
      <div class="alert alert-<%= key %>" style="color: coral;">
        <%= value %>
        <button type="button" class="close" data-dismiss="alert"> &times; </button>
       </div>
    <% end %>

    <div id="dashboard-container">
      <div class="card table-container">
        <div class="card-body">
          <table class="table table-striped table-datatable table-hover display" id="nutrition">
            <thead>
              <tr>
               <th>ItemName - (UOM)</th>
               <!--  <th>Quantity</th> -->
                <th>Calorie(kcal)</th>
                <th>Protein(gms)</th>
                <th>Fat(gms)</th>
                <th>Carbohydrates(gms)</th>
                <th>Fibre(gms)</th>
                <th>Minerals(milli.gms)</th>
                <th>Vitamins(micro.gms)</th>
                <!-- <td>UOM</td>  -->
               <!--  <th>Action</th> -->
              </tr>
            </thead>
            <tbody>
              <% @nutritions.each do |nutrition| %>  
                <tr id="<%=nutrition.id%>">
                  <td><%= nutrition.production_item.name%> - <h2>(<%= nutrition.production_item.unit_of_measurement.name%>)</h2></td>
                 <!--  <td><!%= nutrition.quantity%></td> -->
                  <td><%= nutrition.caloire%></td>
                  <td><%= nutrition.protein%></td>
                  <td><%= nutrition.fat%></td>
                  <td><%= nutrition.carbohydrates%></td>
                  <td><%= nutrition.fibre%></td>
                  <%key= nutrition.minerals %>
                  <%if key.present?%>
                    <td>
                      <%key.map do |k,v|%>
                      <%=k%>=<%=v%>,
                      <%end%>
                      <div class="side-pop position-absolute">
                        <ul class="list-unstyled mb-0">
                          <li><a title="Show" id="show" > <i class="fas fa-eye"></i></a></li>
                          <li><a title="Edit" id="edit" > <i class="fas fa-edit" ></i></a></li>
                          <!-- <%#if CEO? %>
                          <li><a title="Delete" id="destroy" data-method="delete" class="confirmation"> <i class="btn btn-sm btn-default fa fa-sm fa-trash-o"></i></a></li>
                          <%#end%> -->
                        </ul>
                      </div>
                    </td>
                  <%else%>
                  <td></td>
                  <%end%>
                  <%vit= nutrition.vitamins %>
                  <%if vit.present?%>
                  <td>
                    <%vit.map do |k,v|%>
                    <%=k%>=<%=v%>,
                    <%end%>
                    <div class="side-pop position-absolute">
                      <ul class="list-unstyled mb-0">
                        <li><a title="Show" id="show" > <i class="fas fa-eye"></i></a></li>
                        <li><a title="Edit" id="edit" > <i class="fas fa-edit" ></i></a></li>
                        <!-- <%#if CEO? %>
                        <li><a title="Delete" id="destroy" data-method="delete" class="confirmation"> <i class="btn btn-sm btn-default fa fa-sm fa-trash-o"></i></a></li>
                        <%#end%> -->
                      </ul>
                    </div>
                  </td>
                  <%else%>
                  <td>
                    <div class="side-pop position-absolute">
                      <ul class="list-unstyled mb-0">
                        <li><a title="Show" id="show" > <i class="fas fa-eye"></i></a></li>
                        <li><a title="Edit" id="edit" > <i class="fas fa-edit" ></i></a></li>
                        <!-- <%#if CEO? %>
                        <li><a title="Delete" id="destroy" data-method="delete" class="confirmation"> <i class="btn btn-sm btn-default fa fa-sm fa-trash-o"></i></a></li>
                        <%#end%> -->
                      </ul>
                    </div>
                  </td>
                  <%end%>
                  <!--<td><!%= nutrition.vitamins %></td>-->
                  <!-- <td><!%= UnitOfMeasurement.find(nutrition.unit_of_measurement_id).name%></td> -->
                  <!-- <td><!%=link_to "",nutrition, method: :delete, data: { confirm: 'Are you sure?' } ,class: "btn btn-sm btn-default fa fa-sm fa-trash-o",:style=>"color:red"%></td> -->
                                  
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
      <div class="clearfix"></div>
    </div>
  </div>
</section>
  
<script >
  $('.confirmation').on('click', function () {
        return confirm('Are you sure?');
    });
</script>