<section class="page-content">
  <div class="container-fluid">
    <p class="page_path">Master / Departments</p>
    <h2 class="header_title">Department Categories
   <%if ["superadmin","CEO"].include?KitchenUser.find(session["kitchen_user_id"]).role.name %>
    <%= link_to '<i class="fa fa-plus"></i>'.html_safe,new_department_path,:class=>"btn"%>
    <%end%>
    </h2>
    <p id="notice"><%= notice %></p>
    <div id="dashboard-container">
      <div class="card table-container mb-2">
        <div class="card-body">
          <table class="table table-striped table-datatable display table-hover display" cellspacing="0" width="100%" id="department">
            <thead>
              <tr>
                <th>Name</th>
                <th>Description</th>
                <th></th>
              <!--   <th colspan="3"></th> -->
              </tr>
            </thead> 
            <tbody>
              <% @departments.each do |department| %>
                <tr>
                  <td><%= department.name %></td>
                  <td><%= department.description %></td>
                  <td>
                    <%if ["superadmin","CEO"].include?KitchenUser.find(session["kitchen_user_id"]).role.name %>
                     <div class="side-pop position-absolute">
                      <ul class="list-unstyled mb-0">
                        <li><a href="/departments/<%=department.id%>" title="Show" id="show" > <i class="fas fa-eye"></i></a></li>
                        <li><a href="/departments/<%=department.id%>/edit" title="Edit" id="edit"> <i class="fas fa-edit" ></i></a></li>
                      </ul>
                    </div>
                   <%end%>
                  </td>
                 <!--  <td><%#= link_to 'Edit', edit_department_path(department) %></td> -->
                 <!--  <td><%#= link_to 'Show', department %></td>
                  <td><%#= link_to 'Edit', edit_department_path(department) %></td>
                  <td><%#= link_to 'Destroy', department, method: :delete, data: { confirm: 'Are you sure?' } %></td> -->
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</section>

