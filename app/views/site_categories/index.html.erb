<section class="page-content">
  <div class="container-fluid">
    <p class="page_path">Master / Client Type</p>
    <h2 class="header_title">Client Type Categories
      <%if ["superadmin","CEO"].include?KitchenUser.find(session["kitchen_user_id"]).role.name %>
     <%= link_to '<i class="fa fa-plus"></i>'.html_safe,new_site_category_path,:class=>"btn"%>
    <%end%>
    </h2>
    <div id="dashboard-container">
      <div class="card table-container mb-2">
        <div class="card-body">
          <table class="table table-striped table-datatable table-hover display" cellspacing="0" width="100%" id="sitelist">
            <thead>
              <tr>
                <th>Client Type</th>
                <th>Client Category</th>
                <th>Spread Type</th>
                <th>Created_by</th>
                <th>Updated_by</th>
                <th></th>
             <!--    <th>Edit</th> -->
                <!-- <th>Delete</th> -->
              </tr>
            </thead>
            <tbody>
              <% @site_categories.each do |site_category| %>
                <tr>
                  
                  <td><%= site_category.name%></td>
                  <td><%= site_category.client_categories.map{|category| category.name }.join(",") %></td>
                  <td><%= client_spreads(site_category).join(",") if client_spreads(site_category).present? %></td>
                  <td><%= create(site_category) %></td>
                  <td><%= update(site_category) %></td>
                  <!-- <td><!%= link_to 'Show', site_category %></td> -->
                  <!-- <td><%#= link_to 'Edit', edit_site_category_path(site_category),:class=>"" %></td>-->
                <!--   <td><%#= link_to 'Edit', edit_site_category_path(site_category) %></td> -->
 
               
              <td> 
              <%if ["superadmin","CEO"].include?KitchenUser.find(session["kitchen_user_id"]).role.name %>
                <div class="side-pop position-absolute">
                      <ul class="list-unstyled mb-0">
                        <li><a href="/site_categories/<%=site_category.id%>" title="Show" id="show" > <i class="fas fa-eye"></i></a></li>
                        <li><a href="/site_categories/<%=site_category.id%>/edit" title="Edit" id="edit"> <i class="fas fa-edit" ></i></a></li>
                      </ul>
                    </div>
                <%end%>
              </td>

                  <!-- <td><%#= link_to '', site_category, method: :delete, data: { confirm: 'Are you sure?' },:class=>"fa fa-trash-o" %></td> -->
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</section>