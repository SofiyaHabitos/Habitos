<section class="page-content">
  <div class="container-fluid">
    <p class="page_path">Master / Utensil Name</p>
    <h2 class="header_title">Utensil Name
    <%if ["superadmin","Admin","CEO"].include?(KitchenUser.find(session["kitchen_user_id"]).role.name)%>
    <%= link_to '<i class="fa fa-plus"></i>'.html_safe,new_utensilname_path,:class=>"btn"%>
    <%end%>
    </h2>
    <p id="notice"><%= notice %></p>
    <div id="dashboard-container">
      <div class="card table-container mb-2">
        <div class="card-body">
          <table class="table table-striped table-datatable display  table-hover display" cellspacing="0" width="100%" id="utensilnames">
            <thead>
              <tr>
                <th>Name</th>
                <th>Description</th>
                <th></th>
              </tr>
            </thead>

            <tbody>
              <% @utensilnames.each do |utensilname| %>
                <tr>
                  <td><%= utensilname.name %></td>
                  <td><%= utensilname.description %></td>
                 <!--  <td><%#= link_to 'Show', utensilname %></td> -->
                  <!-- <td><%#= link_to 'Edit', edit_utensilname_path(utensilname)  %></td> -->
                <td>
                <%if ["superadmin","Admin","CEO","Dispatch Manager"].include?(KitchenUser.find(session["kitchen_user_id"]).role.name)%>
                 <div class="side-pop position-absolute">
                      <ul class="list-unstyled mb-0">
                        <li><a href="/utensilnames/<%=utensilname.id%>" title="Show" id="show" > <i class="fas fa-eye"></i></a></li>
                        <li><a href="/utensilnames/<%=utensilname.id%>/edit" title="Edit" id="edit"> <i class="fas fa-edit" ></i></a></li>
                      </ul>
                    </div>
                <%end%>
                </td>

                 <!--  <td><%#= link_to 'Destroy', utensilname, method: :delete, data: { confirm: 'Are you sure?' } %></td> -->
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</section>

