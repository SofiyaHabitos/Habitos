<section class="page-content">
  <div class="container-fluid">
    <p class="page_path">SCM / Trip Management</p>
    <h2 class="header_title">Trip Management <%= link_to '<i class="fa fa-plus"></i>'.html_safe,new_trip_detail_path,:class=>"btn"%></h2>

<!-- <p id="notice"><%= notice %></p>

<h1>Trip Details</h1> -->

     <% flash.each do |key, value| %>
      <div class="alert alert-<%= key %>" style="color: coral;">
        <%= value %>
        <button type="button" class="close" data-dismiss="alert"> &times; </button>
      </div>
    <% end %>
    <div id="dashboard-container">
      <div class="card table-container mb-2">
        <div class="card-body">
          <table class="table table-striped table-datatable table-hover display" cellspacing="0" width="100%" id="driver">
            <thead>
              <tr>
                <th>Trip Name</th>
                <th>Report Time</th>
                <th>Trip Cost</th>
                <th>Trip Distance</th>
                <!-- <th>Distance</th>
                <th>Rate</th>
                <th>Waiting time</th>
                <th>Waiting charge</th>
                <th>Serving charging</th>
                <th>Trip</th> -->
      <!-- <th colspan="3"></th> -->
                <th></th>
              </tr>
            </thead>

            <tbody>
               <% @trips.each do |trip| %>
              <tr>
        <!-- <td><%#= trip_detail.source %></td>
        <td><%#= trip_detail.destination %></td>
        <td><%#= trip_detail.vehicle_type %></td>
        <td><%#= trip_detail.distance %></td>
        <td><%#= trip_detail.rate %></td>
        <td><%#= trip_detail.waiting_time %></td>
        <td><%#= trip_detail.waiting_charge %></td>
        <td><%#= trip_detail.serving_charging %></td>
        <td><%#= trip_detail.trip %></td>
        <td><%#= link_to 'Show', trip_detail %></td>
        <td><%#= link_to 'Edit', edit_trip_detail_path(trip_detail) %></td>
        <td><%#= link_to 'Destroy', trip_detail, method: :delete, data: { confirm: 'Are you sure?' } %></td> -->
                 <td><%= trip.trip_name %></td>
                 <td><%= trip.report_time%></td>
                 <td><%= trip.trip_cost %></td>
                 <td><%= trip.trip_distance %></td>
                 <td>
                  <div class="side-pop position-absolute">
                      <ul class="list-unstyled mb-0">
                        <li><a href="/trip_details/<%=trip.id%>" title="Show" id="show" > <i class="fas fa-eye"></i></a></li> 
                        <li><a href="/trip_details/<%=trip.id%>/edit" title="Edit" id="edit"> <i class="fas fa-edit" ></i></a></li>
                      </ul>
                    </div>
                 </td>
              </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</section>

