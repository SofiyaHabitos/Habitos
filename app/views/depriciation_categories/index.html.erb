<section class="page-content">
  <div class="container-fluid">
    <p class="page_path">Master / Depreciation Category</p>
     <h2 class="header_title">Depreciation Category
    <%if ["superadmin","CEO"].include?KitchenUser.find(session["kitchen_user_id"]).role.name %>
    <%= link_to '<i class="fa fa-plus"></i>'.html_safe,new_depriciation_category_path,:class=>"btn"%>
    <%end%>
    </h2>
    <p id="notice"><%= notice %></p>
    <div id="dashboard-container">
      <div class="card table-container mb-2">
        <div class="card-body">
          <table class="table table-striped table-datatable display table-hover display" cellspacing="0" width="100%" id="depriciation_category">
            <thead>
              <tr>
                <th>Name</th>
                <th>Description</th>
                <th>Depreciation percentage</th>    
                <th></th>
              </tr>
            </thead>
            <tbody>
              <% @depriciation_categories.each do |depriciation_category| %>
                <tr>
                  <td><%= depriciation_category.name %></td>
                  <td><%= depriciation_category.description %></td>
                  <td><%= depriciation_category.depreciation_percentage%></td>
                 <!--  <td><%#= link_to 'Edit', edit_depriciation_category_path(depriciation_category)%></td> -->
                 <td>
                  <%if ["superadmin","CEO","Dispatch Manager"].include?KitchenUser.find(session["kitchen_user_id"]).role.name %>
                   <div class="side-pop position-absolute">
                      <ul class="list-unstyled mb-0">
                        <li><a href="/depriciation_categories/<%=depriciation_category.id%>" title="Show" id="show" > <i class="fas fa-eye"></i></a></li>
                        <li><a href="/depriciation_categories/<%=depriciation_category.id%>/edit" title="Edit" id="edit"> <i class="fas fa-edit" ></i></a></li>
                      </ul>
                    </div>
                  <%end%>
                 </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</section>

<%#= link_to 'New Depriciation Category', new_depriciation_category_path %>
