<%= link_to 'New Production Item', new_production_item_path %>
<%= form_for(operation) do |f| %>
  <% if operation.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(operation.errors.count, "error") %> prohibited this operation from being saved:</h2>

      <ul>
      <% operation.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.label :name %>
    <%= f.text_field :name,:class=>"form-control", :required=>"true" %><br>
<%= f.label :manpower %>
    <%= f.text_field :manpower,:class=>"form-control", :required=>"true" %><br>
<%= f.label :time %>
    <%= f.text_field :time,:class=>"form-control", :required=>"true" %><br>
<%= f.label :process_cost %>
    <%= f.text_field :process_cost,:class=>"form-control", :required=>"true" %><br>
    <%= f.label :quantity %>
    <%= f.text_field :quantity,:class=>"form-control", :required=>"true" %><br>
    <%= f.label :unit_of_measurement_id %>
    <%= f.collection_select :unit_of_measurement_id, UnitOfMeasurement.order(:name),:id,:name, include_blank: true, :required=>"true" %>
    
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
