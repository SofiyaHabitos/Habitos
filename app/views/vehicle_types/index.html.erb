<p id="notice"><%= notice %></p>

<h1>Vehicle Types</h1>

<table>
  <thead>
    <tr>
      <th>Vehicle type name</th>
      <th>Type details</th>
      <th>Transport type</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @vehicle_types.each do |vehicle_type| %>
      <tr>
        <td><%= vehicle_type.vehicle_type_name %></td>
        <td><%= vehicle_type.type_details %></td>
        <td><%= vehicle_type.transport_type %></td>
        <td><%= vehicle_type.status %></td>
        <td><%= link_to 'Show', vehicle_type %></td>
        <td><%= link_to 'Edit', edit_vehicle_type_path(vehicle_type) %></td>
        <td><%= link_to 'Destroy', vehicle_type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

