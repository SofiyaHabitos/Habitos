<section class="page-content">
  <div class="container-fluid">
    <p class="page_path">Master / Allergy</p>
    <h2 class="header_title">Allergy <%= link_to '<i class="fa fa-plus"></i>'.html_safe,new_allery_path,:class=>"btn"%></h2>
    <div id="dashboard-container">
      <div class="card table-container">
        <div class="card-body">
          <table class="table table-striped table-datatable table-hover display" id="allery">
            <thead>
               <tr>
                  <th>Name</th>
                  <th>Description</th>
                  <th>Created_by</th>
                  <th>Updated_by</th>
                  <th>Action</th>
                  <!-- <th>Delete</th> -->
                </tr>
            </thead>
            <tbody>
              <% @alleries.each do |allery| %>
                <tr>
                  <td><%= allery.name %></td>
                  <td><%= allery.description %></td>
                  <td><%= create(allery) %></td>
                  <td><%= update(allery) %></td>
                  <td><%= link_to 'Edit', edit_allery_path(allery),:class=>"" %></td>
                  <!-- <td><%#= link_to '', allery, method: :delete, data: { confirm: 'Are you sure?' },:class=>"fa fa-trash-o" %></td> -->
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
      <div class="clearfix"></div>
    </div>
  </div>
</section>
