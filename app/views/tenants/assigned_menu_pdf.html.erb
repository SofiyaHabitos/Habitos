<style>body{margin: 0 10mm;}tr{page-break-inside: avoid;}td:empty:after{content: '-';}</style><% if @menu_details.present? %><main><table style="border-collapse: collapse; width:100%;"><thead><tr><th style="padding: 10px; min-width: 135px; border: 1px solid #6d6d6d; text-align: left;">Date</th><th style="padding: 10px; min-width: 135px; border: 1px solid #6d6d6d; text-align: left;">Day</th><th style="padding: 10px; border: 1px solid #6d6d6d; text-align: left;">Item</th></tr></thead><tbody><% @menu_details.map do |dat, v| %><tr><td style="padding: 5px 10px; border: 1px solid #6d6d6d; text-align: left;"><%= dat.strftime('%d-%m-%Y')%></td><td style="padding: 5px 10px; border: 1px solid #6d6d6d; text-align: left;"><%= dat.strftime('%A')%></td><td style="padding: 5px 10px; border: 1px solid #6d6d6d; text-align: left;"><% v.map do |menu|%><%client_type_id = v.first.tenant_detail.stud_type.to_i%><%if menu.tenant_detail.stud_type.to_i == client_type_id%><% unless menu.menu_items.delete_if{|dish| dish["name"]== "" }.count == 0 %><p style="font-weight: bold;"><%= menu.category.category_name if menu.category.present? %></p><% menu.menu_items.map do |item| %><span><%= item["name"] %>,</span><%end%><%end%><%end%><%end%></td></tr><%end%></tbody></table></main><%end%>