    <div class="modal-dialog">
      <div class="modal-content meal_info">
        <div class="modal-header">
          <h4 class="modal-title">Customer Meal Info</h4>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span class="ti-close" aria-hidden="true"></span>
          </button>
        </div>
        <div class="modal-body pl-0 pr-0">
        <%= form_for(:cook_sheet, url: menu_customers_cook_edit_path()) do |f| %>

          <table class="table table-striped table-bordered cookedit">
            <!-- <thead>
              <th>Customer Name</th>
              <th>Count</th>
              <th class="text-center">Action</th>
            </thead> -->
            <tbody>
                <tr>
                  <td><input type="text" name="tenant_name" class="form-control tenant" value="<%=@menu["tenant_detail"]["tenant"]["name"]%>" autofocus="true" readonly="true" ></td>
                  <td><input type="number" min="0" name="quantity" class="form-control qty" value="<%=@menu["quantity"].to_i%>"></td>
                </tr>
                <%@menu["menu_items"].map do |v|%>
                <%if v["name"] != ""%>
                <tr>
                <td><input type="text" name="menu_items[]" class="form-control item"value="<%=v["name"]%>" readonly="true"></td>
                <td><input type="text" name="qty[]" class="form-control" value="<%=v["qty"]%>" ></td>
                </tr>
                <%end%>
                <%end%>
                <input type="hidden" name="id" class="form-control id" value="<%=@menu["id"]%>">

                 <!--  <td><input type="text" name="menu_item" class="form-control item"></td> -->
                  <%= hidden_field_tag :date_choosen, "", value: @date_choosen %>

                <tr>
                   <td class="text-center"><%=f.submit 'Save',class: "btn btn_submit"%></td> 
                </tr>
                
              <%end%>
            </tbody>  
          </table> 
        </div>          
                       
      </div>      
    </div>          
