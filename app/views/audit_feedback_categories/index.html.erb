<section class="page-content">
  <div class="container-fluid">
    <p class="page_path">Master / Audit Feedback Category </p>
    <h2 class="header_title">Audit Feedback Category
    <%= link_to '<i class="fa fa-plus"></i>'.html_safe,new_audit_feedback_category_path,:class=>"btn"%>
    </h2>
     <div id="dashboard-container">
      <div class="card table-container mb-2">
        <div class="card-body">
          <table class="table table-striped table-datatable display table-hover display" cellspacing="0" width="100%" id="department">
            <thead>
              <tr>
                <th>Category name</th>
                <th>Category Description</th>
                <th>Status</th>
              </tr>
            </thead>
            <tbody>
               <% @audit_feedback_categories.each do |audit_feedback_category| %>
              <tr>
                <td><%= audit_feedback_category.category_name %></td>
                <td><%= audit_feedback_category.category_desc %></td>
                <td><%= audit_feedback_category.status %></td>
                <td>
                  <div class="side-pop position-absolute">
                      <ul class="list-unstyled mb-0">
                        <li><a href="/audit_feedback_categories/<%= audit_feedback_category.id %>" title="Show" id="show" > <i class="fas fa-eye"></i></a></li>
                        <li><a href="/audit_feedback_categories/<%= audit_feedback_category.id %>/edit" title="Edit" id="edit"> <i class="fas fa-edit" ></i></a></li>
                      </ul>
                  </div>

                </td>
              </tr>
               <%end%>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</section>


















