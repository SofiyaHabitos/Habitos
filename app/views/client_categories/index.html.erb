<section class="page-content">
  <div class="container-fluid">
    <p class="page_path">Master / Client Categories</p>
    <h2 class="header_title">Client Categories
     <%if ["superadmin","CEO"].include?KitchenUser.find(session["kitchen_user_id"]).role.name %>
    <%= link_to '<i class="fa fa-plus"></i>'.html_safe,new_client_category_path,:class=>"btn"%>
    <%end%>
    </h2>
    <p id="notice"><%= notice %></p>
    <div id="dashboard-container">
      <div class="card table-container mb-2">
        <div class="card-body">
          <table class="table table-striped table-datatable table-hover display" cellspacing="0" width="100%" id="client_category">
            <thead>
               <tr>
                <th>Name</th>
               </tr>
            </thead>
            <tbody>
              <%  @client_categories.each do |client_category| %>
                <tr id="<%=client_category.id%>">
                  <td><%= client_category.name %>
                  <%if ["superadmin","CEO"].include?KitchenUser.find(session["kitchen_user_id"]).role.name %>
                    <div class="side-pop position-absolute">
                      <ul class="list-unstyled mb-0">
                        <li><a href="/client_categories/<%=client_category.id%>" title="Show" id="show" > <i class="fas fa-eye"></i></a></li>
                        <li><a href="/client_categories/<%=client_category.id%>/edit" title="Edit" id="edit"> <i class="fas fa-edit" ></i></a></li>
                      </ul>
                    </div>
                    <%end%>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
      <div class="clearfix"></div>
    </div>
  </div>
</section>
  
<script >
  $('.confirmation').on('click', function () {
        return confirm('Are you sure?');
    });
</script>