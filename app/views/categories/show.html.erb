<section class="page-content">
  <div class="container-fluid">
    <p class="page_path">Master / Meal Course / Show Meal Course</p>
    <h2 class="header_title">Show Meal Course <%= link_to '<i class="fas fa-arrow-left"></i>Back'.html_safe, categories_path, title:"Back", :class=>"btn btn_back"%></h2>
    <div class="card show_form mb-5">
      <div class="card-body">
        <div class="row">
          <div class="col-md-3">
            <label class="control-label">Meal Group</label>
            <h3><%= @category.category_name%></h3>
          </div>
          <div class="col-md-3">
            <label class="control-label">No of Items</label>
            <h3><%=ProductionItem.select { |m| m.category.include?( @category.id) }.count %></h3>
          </div>
          <div class="col-md-3">
            <label class="control-label">Description</label>
            <h3><%= @category.description %></h3>
          </div>
          <div class="col-md-3">
            <label class="control-label">Created on</label>
            <h3><%= @category.created_at.strftime('%v') %></h3>
          </div>
          <div class="col-md-3">
            <label class="control-label">Created_by</label>
            <h3><%= create(@category) %></h3>
          </div>
          <div class="col-md-3">
            <label class="control-label">Updated_by</label>
            <h3><%= update(@category) %></h3>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>   



